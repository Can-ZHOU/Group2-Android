<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTimeableActivity">

    <Button
        android:id="@+id/button_add_timetable"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/rounded_bt"
        android:text="add"

        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_add_time"
        app:layout_constraintVertical_bias="0.473" />

    <EditText
        android:id="@+id/editText_add_date"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_marginTop="208dp"
        android:background="@drawable/editextbackground"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/editText_add_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_add_time"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_add_time"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/editextbackground"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_add_date" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        android:text=" DATE"
        android:textColor="#0E73B9"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_add_date"
        app:layout_constraintStart_toStartOf="@+id/editText_add_date" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        android:text="TIME"
        android:textColor="#0E73B9"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_add_time"
        app:layout_constraintStart_toStartOf="@+id/editText_add_time" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:text="Add Your TimeTable"
        android:textColor="#0E73B9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_add_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

</androidx.constraintlayout.widget.ConstraintLayout>