<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity"
    android:theme="@style/AppTheme">

    <EditText
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:id="@+id/book_glassroom_date"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/textView_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />

    <EditText
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:id="@+id/book_glassroom_time"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_time" />

    <Button
        android:id="@+id/button_book_glassroom_search"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/rounded_bt"
        android:text="Search"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_glassroom_time" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="180dp"
        android:text="Date"
        android:textColor="#0E73B9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Time"
        android:textColor="#0E73B9"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/book_glassroom_date"
        app:layout_constraintTop_toBottomOf="@+id/book_glassroom_date" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:text="Booking Glassroom"
        android:textColor="#0E73B9"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/book_glassroom_date"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/textView_date"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>