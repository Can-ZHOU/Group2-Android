<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinMeetingActivity">

    <Button
        android:id="@+id/save_join_btn"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="420dp"
        android:background="#FFFFFF"
        android:hint="Save and Join" />

    <EditText
        android:id="@+id/join_ID"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Enter meeting ID"
        android:inputType="textPersonName"
        android:textColor="#4F0F0D12" />

    <TextView
        android:id="@+id/tv_nopass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="250dp"
        android:text=" (leave empty, if no password)"
        android:textColor="#4F0F0D12"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/jm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:hint="Join Meeting"
        android:textColor="#000000"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/join_pwd"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="time"
        android:textColor="#4F0F0D12" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>