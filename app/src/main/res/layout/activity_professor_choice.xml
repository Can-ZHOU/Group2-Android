<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessorChoiceActivity">

    <Button
        android:id="@+id/button_professor_profile"
        android:layout_width="169dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_bt"
        android:text="My Profile"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_professor_glassroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_professor_add_time"
        android:layout_width="170dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_bt"
        android:text="my timetable"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button_professor_glassroom"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_professor_glassroom"
        app:layout_constraintTop_toBottomOf="@+id/button_professor_glassroom" />

    <Button
        android:id="@+id/button_professor_game"
        android:layout_width="162dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_bt"
        android:text="game"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button_professor_add_time"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/button_professor_add_time"
        app:layout_constraintTop_toBottomOf="@+id/button_professor_add_time" />

    <Button
        android:id="@+id/button_professor_glassroom"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/rounded_bt"
        android:text="Booking Glassroom"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/button_professor_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_professor_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="373dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/button_professor_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>