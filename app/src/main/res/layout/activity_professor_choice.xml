<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessorChoiceActivity">

    <Button
        android:id="@+id/button_professor_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginBottom="46dp"
        android:text="My Profile"
        app:layout_constraintBottom_toTopOf="@+id/button_professor_glassroom"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_professor_glassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="251dp"
        android:text="Booking Glassroom"
        app:layout_constraintStart_toStartOf="@+id/button_professor_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_professor_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="38dp"
        android:text="my timetable"
        app:layout_constraintStart_toStartOf="@+id/button_professor_glassroom"
        app:layout_constraintTop_toBottomOf="@+id/button_professor_glassroom" />

    <Button
        android:id="@+id/button_professor_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="game"
        app:layout_constraintEnd_toEndOf="@+id/button_professor_add_time"
        app:layout_constraintTop_toBottomOf="@+id/button_professor_add_time" />
</androidx.constraintlayout.widget.ConstraintLayout>