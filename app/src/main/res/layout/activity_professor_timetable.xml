<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessorTimetableActivity">

    <Button
        android:id="@+id/button_professor_01"
        android:layout_width="0dp"

        android:layout_height="50dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/rounded_bt"
        android:text="Professor 01"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_professor_02"
        app:layout_constraintEnd_toEndOf="@+id/button_professor_02"
        app:layout_constraintStart_toStartOf="@+id/button_professor_02"
        app:layout_constraintTop_toBottomOf="@+id/professor_date" />

    <Button
        android:id="@+id/button_professor_02"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_marginBottom="231dp"
        android:background="@drawable/rounded_bt"
        android:text="Professor 02"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_professor_01" />

    <EditText
        android:id="@+id/professor_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/editextbackground"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/button_professor_01"
        app:layout_constraintStart_toStartOf="@+id/textView_professor_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_professor_date" />

    <TextView
        android:id="@+id/textView_professor_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:text=" DATE"
        android:textColor="#0E73B9"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/professor_date"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="341dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="56dp"
        android:text="   Professor's TimeTable"
        android:textColor="#0E73B9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_professor_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>