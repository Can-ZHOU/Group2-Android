<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:theme="@style/AppTheme"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/email_register"

        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/editextbackground"
        android:ems="10"
        android:hint=" Enter your TCD Email ID"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/textView78"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/pwd_register"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/editextbackground"
        android:ems="10"
        android:hint=" Enter your Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/button_register_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView78" />

    <Button
        android:id="@+id/button_register_register"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_bt"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_register_signIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd_register" />

    <Button
        android:id="@+id/button_register_signIn"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="257dp"
        android:background="@drawable/rounded_bt"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_register_register" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="287dp"
        android:layout_height="74dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="32dp"
        android:text="Lets Sign You Up"
        android:textColor="#0E73B9"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="9dp"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/email_register"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/pwd_register"
        app:layout_constraintStart_toStartOf="@+id/pwd_register"
        app:layout_constraintTop_toBottomOf="@+id/email_register" />

</androidx.constraintlayout.widget.ConstraintLayout>