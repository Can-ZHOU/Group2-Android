<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attendeeName"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="attendeeName" />

            <TextView
                android:id="@+id/attendeeLocation"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_toRightOf="@id/attendeeName"
                android:text="meetingDate" />

            <TextView
                android:id="@+id/attendeeLocalTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_below="@id/attendeeLocation"
                android:text="attendeeLocalTime" />

            <TextView
                android:id="@+id/attendeeStandardTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_below="@id/attendeeLocalTime"
                android:text="attendeeStandardTime" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>
