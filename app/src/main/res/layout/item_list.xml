<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meetingName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="meetingName"
                android:textAlignment="center"
                android:textColor="#9A1717"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meetingDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/meetingName"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="meetingDate"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meetingTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/meetingDate"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="meetingTime"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meetingDuration"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/meetingTime"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="meetingDuration"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meetingID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/meetingDuration"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="meetingID"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meetingID"

                android:background="@drawable/button_meeting"
                android:text="Detail"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>
